<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Home"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_recherche_home"
        android:layout_width="31dp"
        android:layout_height="22dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/recherche_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Books"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="90dp"
        android:text="Trend Books"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="410dp"
        android:layout_height="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/footer_design" />

    <Button
        android:id="@+id/btn_profile_home"
        android:layout_width="39dp"
        android:layout_height="24dp"
        android:layout_marginBottom="-45dp"
        android:background="@drawable/profileicon_design"
        android:backgroundTint="@color/purple_700"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_mystorie_home" />

    <Button
        android:id="@+id/btn_ebook_home"
        android:layout_width="39dp"
        android:layout_height="24dp"
        android:layout_marginBottom="-45dp"
        android:background="@drawable/ebookicon_desgn"
        android:backgroundTint="@color/purple_700"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/btn_mystorie_home"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_audio_home" />

    <Button
        android:id="@+id/btn_cat_home"
        android:layout_width="39dp"
        android:layout_height="24dp"
        android:layout_marginBottom="-45dp"
        android:background="@drawable/categorieicon_design"
        android:backgroundTint="@color/purple_700"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/btn_audio_home"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_home_home" />

    <Button
        android:id="@+id/btn_home_home"
        android:layout_width="39dp"
        android:layout_height="24dp"
        android:layout_marginBottom="-45dp"
        android:background="@drawable/homeicon_design"
        android:backgroundTint="@color/purple_700"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/btn_cat_home"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_mystorie_home"
        android:layout_width="39dp"
        android:layout_height="24dp"
        android:layout_marginBottom="-45dp"
        android:background="@drawable/mystorieicon_design"
        android:backgroundTint="@color/purple_700"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/btn_profile_home"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_ebook_home" />

    <Button
        android:id="@+id/btn_audio_home"
        android:layout_width="39dp"
        android:layout_height="24dp"
        android:layout_marginBottom="-45dp"
        android:background="@drawable/audiobookicon_design"
        android:backgroundTint="@color/purple_700"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/btn_ebook_home"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_cat_home" />

    <HorizontalScrollView
        android:layout_width="409dp"
        android:layout_height="223dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/cashflow_design" />

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/dune_design" />

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/fourhour_design" />

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/habit_design" />

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/martian_design" />

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/midnight_design" />

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/now_design" />

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/pom_design" />

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/red_design" />

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/richdad_design" />

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/snow_design" />

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/subtle_design" />

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/think_design" />

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/unfair_design" />

            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="@drawable/who_design" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="409dp"
        android:layout_height="206dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:background="@drawable/fourhour_design" />

            <Button
                android:id="@+id/button2"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:background="@drawable/now_design" />

            <Button
                android:id="@+id/button2"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:background="@drawable/midnight_design" />

            <Button
                android:id="@+id/button2"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:background="@drawable/pom_design" />

            <Button
                android:id="@+id/button2"
                android:layout_width="146dp"
                android:layout_height="204dp"
                android:background="@drawable/richdad_design" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="395dp"
        android:layout_height="104dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/pub" />

</androidx.constraintlayout.widget.ConstraintLayout>